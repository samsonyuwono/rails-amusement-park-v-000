<div class="center">
  <div class="pic">
    <img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" height="250">
  </div>

<b>Name:</b> <%= @attraction.name %> <br />
<b>Ticket Requirement:</b> <%=@attraction.tickets %> <br />
<b>Height Requirement:</b> <%=@attraction.min_height%> <br />
<b>Nausea Rating:</b> <%=@attraction.nausea_rating%> <br />
<b>Happiness Rating:</b> <%=@attraction.happiness_rating %> <br />
<% if admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %> <br />
  <% else %>
  <%= button_to "Go on this ride", new_ride_path, method: :get, params: {:attraction_id => @attraction.id}%>
  <% end %>

<a href="/attractions">Back</a>
