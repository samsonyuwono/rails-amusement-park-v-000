<%= form_for @attraction do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :height, "Height requirement(in inches):" %>
  <%= f.number_field :min_height %><br />

  <%= f.label :happiness, "How fun is it?(1-5 scale):" %>
  <%= f.number_field :happiness_rating %><br />

  <%= f.label :nausea, "How nausea-inducing is it?(1-5 scale):" %>
  <%= f.number_field :nausea_rating %><br />

  <%= f.label :tickets, "How many tickets does it cost?" %>
  <%= f.number_field :tickets %><br />


  <%= f.submit "Edit Attraction" %>
<% end %>
