<h1>Edit User</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :height, "Height (in inches):" %>
  <%= f.number_field :height %><br />

  <%= f.label :happiness, "How happy are you?(1-5 scale):" %>
  <%= f.number_field :happiness %><br />

  <%= f.label :nausea, "How nauseous are you?(1-5 scale):" %>
  <%= f.number_field :nausea %><br />

  <%= f.label :tickets, "How many dollars are in your pocket?:" %>
  <%= f.number_field :tickets %><br />

  <b>Password:</b><%= f.password_field :password %>
  <%= f.submit "Update User" %>
<% end %>
